<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:fontFamily="@font/quicksand_regular"
   >


    <RelativeLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_240sdp"
        android:background="@drawable/bg_pause"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtPause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:text="PAUSE"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_33sdp"

            />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_100sdp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_60sdp">

                <TextView
                    android:id="@+id/txtNo"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/corgi_no"
                    android:gravity="center" />

                <Button
                    android:id="@+id/btnQuit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtNo"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/btn_beige"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="QUIT"
                    android:textSize="@dimen/_18sdp" />

                <TextView
                    android:id="@+id/txtYes"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/corgi_yes"
                    android:gravity="center" />

                <Button
                    android:id="@+id/btnResume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtYes"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_beige"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="  RESUME  "
                    android:textSize="@dimen/_18sdp" />

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>