<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:fontFamily="@font/quicksand_regular"
    android:background="@drawable/how_to_play_bg"
    tools:context=".howToPlay">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#F3FEFF"
            android:clickable="true"
            android:onClick="back"
            android:scaleType="centerCrop"
            android:src="@drawable/back_button_small"
            android:textAlignment="center" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="HOW TO PLAY"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/_minus5sdp"
                android:textSize="@dimen/_30sdp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_semibold"
                        android:gravity="center"
                        android:text="Basic Rules"
                        android:background="@drawable/bordered_wood_box"
                        android:textColor="#000000"
                        android:textSize="@dimen/_24sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_semibold"
                        android:gravity="center"
                        android:text="To win in QU4TRO just\n     match the current card!    "
                        android:background="@drawable/chat_bubble"
                        android:textColor="#000000"
                        android:textSize="@dimen/_24sdp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_semibold"
                        android:background="@drawable/chat_ovals"
                        android:text="         "
                        android:layout_marginLeft="80dp"
                        android:textColor="#000000"
                        android:textSize="@dimen/_16sdp" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="@dimen/_500sdp"
                        android:layout_height="@dimen/_400sdp"
                        android:layout_marginLeft="40dp"
                        app:srcCompat="@drawable/ic_basic_rules" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_60sdp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand_semibold"
                            android:background="@drawable/chat_ovals"
                            android:text="      "
                            android:layout_marginLeft="@dimen/_70sdp"
                            android:textColor="#000000"
                            android:textSize="@dimen/_16sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_75sdp"
                        >

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/gifCorgi"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_140sdp"
                            android:layout_gravity="left"
                            android:layout_marginRight="@dimen/_250sdp"
                            android:gravity="left"
                            android:src="@drawable/src_anim" />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_semibold"
                        android:gravity="center"
                        android:text="Special Cards"
                        android:background="@drawable/bordered_wood_box"
                        android:textColor="#000000"
                        android:textSize="@dimen/_24sdp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/_300sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:srcCompat="@drawable/ic_special_cards_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/_280sdp"
                        android:layout_height="@dimen/_130sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:srcCompat="@drawable/ic_special_cards_2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="@dimen/_300sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:srcCompat="@drawable/ic_special_cards_3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_semibold"
                        android:gravity="center"
                        android:text="   And that's about it! Go out   \n there and get em!    "
                        android:background="@drawable/chat_bubble"
                        android:textColor="#000000"
                        android:textSize="@dimen/_22sdp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_semibold"
                        android:background="@drawable/chat_ovals"
                        android:text="         "
                        android:layout_marginLeft="@dimen/_140sdp"
                        android:textColor="#000000"
                        android:textSize="@dimen/_16sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_20sdp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand_semibold"
                            android:background="@drawable/chat_ovals"
                            android:text="      "
                            android:layout_marginLeft="@dimen/_180sdp"
                            android:textColor="#000000"
                            android:textSize="@dimen/_16sdp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:id="@+id/backCards"
                            android:layout_marginTop="@dimen/_80sdp"
                            android:layout_gravity="left"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="@dimen/_50sdp"
                            android:src="@drawable/ic_back_cards" />

                        <ImageView
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_120sdp"
                            android:layout_alignBottom="@+id/backCards"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="left"
                            android:layout_marginLeft="-19dp"
                            android:layout_marginBottom="-5dp"
                            android:layout_toRightOf="@+id/backCards"
                            android:src="@drawable/ic_corgi_bottom" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>