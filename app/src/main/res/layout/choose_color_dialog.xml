<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fontFamily="@font/quicksand_regular"
    android:background="#F3FEFF"
    android:padding="@dimen/activity_horizontal_margin">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/btns"
        android:layout_height="wrap_content"
        >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/btnRed"
        android:textSize="@dimen/_28sdp"
        android:padding="@dimen/_10sdp"
        android:background="#FF6961"
        android:gravity="center"
        android:textStyle="bold"
        android:clickable="true"
        android:onClick="button_1_click"
        android:visibility="visible"
        android:minHeight="@dimen/_55sdp"
        android:maxHeight="@dimen/_55sdp"
        android:maxWidth="@dimen/_55sdp"
        android:minWidth="@dimen/_55sdp"
        android:layout_alignTop="@+id/btnBlue"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:enabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/btnBlue"
        android:background="#A5E1E6"
        android:padding="@dimen/_10sdp"
        android:textSize="@dimen/_28sdp"
        android:gravity="center"
        android:textStyle="bold"
        android:clickable="true"
        android:onClick="button_2_click"
        android:visibility="visible"
        android:minHeight="@dimen/_55sdp"
        android:maxHeight="@dimen/_55sdp"
        android:maxWidth="@dimen/_55sdp"
        android:minWidth="@dimen/_55sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_toRightOf="@id/btnRed"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:enabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/btnGreen"
        android:padding="@dimen/_10sdp"
        android:textSize="@dimen/_28sdp"
        android:gravity="center"
        android:background="#AAE9A4"
        android:textStyle="bold"
        android:clickable="true"
        android:onClick="button_3_click"
        android:visibility="visible"
        android:minHeight="@dimen/_55sdp"
        android:maxHeight="@dimen/_55sdp"
        android:maxWidth="@dimen/_55sdp"
        android:minWidth="@dimen/_55sdp"
        android:layout_alignTop="@+id/btnBlue"
        android:layout_toRightOf="@id/btnBlue"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:enabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/btnYellow"
        android:background="#FFE663"
        android:textSize="@dimen/_28sdp"
        android:textIsSelectable="false"
        android:gravity="center"
        android:textStyle="bold"
        android:clickable="true"
        android:onClick="button_4_click"
        android:visibility="visible"
        android:minHeight="@dimen/_55sdp"
        android:maxHeight="@dimen/_55sdp"
        android:maxWidth="@dimen/_55sdp"
        android:minWidth="@dimen/_55sdp"
        android:enabled="true"
        android:layout_alignTop="@+id/btnGreen"
        android:layout_toRightOf="@+id/btnGreen"
        android:layout_marginLeft="@dimen/_5sdp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:background="@drawable/btn_purple"
            android:fontFamily="@font/quicksand_bold"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="@dimen/_20sdp"/>

    </LinearLayout>


</LinearLayout>